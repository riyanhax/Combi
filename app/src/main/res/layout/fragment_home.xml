<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="sid55.combi.home">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:text="Increase your phone's life."
        android:textSize="20dp"
        android:background="#000000"
        android:textColor="#C0C0C0"
        android:id="@+id/textView"
        android:layout_below="@+id/textView2"
        android:layout_gravity="center_horizontal|bottom" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:paddingLeft="20dp"
        android:text="Save Memory\nSave Ram\nSave Battery"
        android:layout_below="@+id/textView"
        android:textSize="25dp"
        android:background="#000000"
        android:textColor="#C0C0C0"
        android:id="@+id/first"
        android:paddingBottom="20dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:text="Combi"
        android:textSize="40dp"
        android:id="@+id/textView2"
        android:gravity="center_horizontal"
        android:background="#C0C0C0"
        android:textColor="#000000"/>

    <View
        android:layout_width="fill_parent"
        android:layout_height="10dp"
        android:background="#000000"
        android:layout_below="@+id/first"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:text="Get your own combination and have fun with all your favourate applications without worring about memory left."
        android:id="@+id/textView3"
        android:background="#000000"
        android:textColor="#C0C0C0"
        android:layout_below="@+id/first"
        android:textSize="20dp"
        android:gravity="center_horizontal"/>


</RelativeLayout>
